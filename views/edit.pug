extends layout.pug

block content
    .containeredit
        h1.edit-contact-heading Edit Contact
        form(action='/' + contact.id + '/edit', method='POST')
            fieldset
                legend Basic Info
                <label for='title'>Title</label>
                <select name='title' class='input-field'>
                    <option value='Mr.'>Mr.</option>
                    <option value='Mrs.'>Mrs.</option>
                    <option value='Ms.'>Ms.</option>
                    <option value='Dr.'>Dr.</option>
                </select>
                label(for='firstname') First Name
                input(type='text', name='firstname', value=contact.first_name)
                label(for='lastname') Last Name
                input(type='text', name='lastname', value=contact.last_name)
                label(for='phone') Phone
                input(type='text', name='phone', value=contact.phone_number)
                label(for='email') Email
                input(type='text', name='email', value=contact.email_address)

            fieldset
                legend Address
                label(for='street') Street
                input(type='text', name='street', value=contact.street)
                label(for='city') City
                input(type='text', name='city', value=contact.city)
                label(for='state') State
                input(type='text', name='state', value=contact.state)
                label(for='zip') Zip
                input(type='text', name='zip', value=contact.zip)
                label(for='country') Country
                input(type='text', name='country', value=contact.country)

            fieldset
                legend Contact Preferences
                label(for="contactByPhone" class="checkbox-label")
                    input(type="checkbox", name="contactByPhone", checked=contact.contact_by_phone == 1)
                    | Contact by phone
                label(for="contactByEmail" class="checkbox-label")
                    input(type="checkbox", name="contactByEmail", checked=contact.contact_by_email == 1)
                    | Contact by email
                label(for="contactByMail" class="checkbox-label")
                    input(type="checkbox", name="contactByMail", checked=contact.contact_by_mail == 1)
                    | Contact by mail
            button.btn-save(type='submit') Save
            a.btn-cancel(href='/') Cancel
